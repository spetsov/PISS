@model PISS.Models.DiplomaTeacherViewModel

<h1>Diploma of @Model.Diploma.Student.Email</h1>

@if (this.Model.Diploma.АssignmentFile != null && this.Model.Diploma.АssignmentFile != null)
{
    <h2>Assignment</h2>
        
    <h3>Document:</h3>
    <a href='@Url.Action("Index", "Download", new { id = this.Model.Diploma.АssignmentFile.Id })' target = "_blank">@this.Model.Diploma.АssignmentFile.FileName</a>
    
    if (this.Model.Diploma.Approved == PISS.Models.ApprovedStatus.Unapproved)
    {
    <form method="post" action='@Url.Action("ApproveAssignment", this.Model.Diploma)' style="width:45%">
        <div>

            @Html.LabelFor(m => m.Notes)
            @Html.TextAreaFor(m => m.Notes)
            <p>
                <input type="submit" value="Approve" class="k-button" />
            </p>
        </div>
    </form>
    }
}

@if (this.Model.Diploma.Thesis != null && this.Model.Diploma.Thesis.SourceCodeFile != null)
{
    <h2>Thesis</h2>
        
    <h3>Source code:</h3>
    <a href='@Url.Action("Index", "Download", new { id = this.Model.Diploma.Thesis.SourceCodeFile.Id })' target = "_blank">@this.Model.Diploma.Thesis.SourceCodeFile.FileName</a>
}

